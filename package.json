    "@types/lodash": "^4.14.168",
    "@types/react": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "antd-theme-webpack-plugin": "^1.3.9",
    "autoprefixer": "^9.8.6",
    "codelyzer": "^6.0.1",
    "husky": "^4.2.3",
    "i18next-scanner": "^3.0.0",
    "i18next-scanner-typescript": "^1.0.6",
    "postcss": "^7.0.35",
    "prettier": "^2.2.1",
    "prettier-quick": "0.0.5",
